<% layout('layouts/boilerplate') %>
<div class="container flex justify-content-center align-items-center mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3 mb-3">
            <div class="card shadow">
                <img class="card-img-top" src="https://images.unsplash.com/photo-1714704563602-ee97c5dd6915?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8Y2FtcGdyb3VuZHxlbnwwfHwyfHx8MA%3D%3D" alt="">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <form action="/login" method="post" class="validated-form" novalidate>
                        <div class = "mb-3">
                            <label class = "form-label" for="username">Username</label>
                            <input class = "form-control" type="text" id = 'username'  name = 'username' autofocus required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter username</div>
                        </div>
                        <div class = "mb-3">
                            <label class = "form-label" for="password">Password</label>
                            <input class = "form-control" type="password" id = 'password'  name ="password" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter password</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" type="button">Login</button>
                          </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>