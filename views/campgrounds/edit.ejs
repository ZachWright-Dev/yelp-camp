<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class = "text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground.id %>/edit?_method=PUT" method = 'POST' novalidate class="validated-form" enctype="multipart/form-data">
            <div class = "mb-3">
                <label class = "form-label" for="title">Title</label>
                <input class = "form-control" type="text" id = 'title' placeholder="" name = 'campground[title]' value="<%=campground.title  %>" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Title required</div>
            </div>
            <div class="mb-3">
                <label class = "form-label" for="price">Location </label>
                <input class = "form-control" type="text" id = 'price' placeholder="" name = 'campground[location]' value="<%= campground.location %>" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Location required</div>
            </div>
            <!-- Add Campground Price here -->
            <div class="input-group mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name = "campground[price]" placeholder="0.00" aria-label="Amount (to the nearest dollar)" value="<%=campground.price  %>" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Price required</div>
                </div>
              </div>
            <div class="mb-3">
                <label class = "form-label" for="price">Description </label>
                <textarea class = "form-control" type="text" id = 'description' placeholder="" name= 'campground[description]' required><%= campground.description %></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Description required</div>
            </div>
            <div class="mb-3 custom-file">
                <label for="formFile custome-file-label" class="form-label">Add More Images</label>
                <input class="form-control" name="image" type="file" id="formFile" multiple>
            </div>

            <div class="mb-3">
                <% campground.image.forEach((img, i) =>{ %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">

                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                </div>

                <label for="image-<%= i %>">Delete</label>
                <% }) %>

            </div>

            <div class="mb-3">
                <button class="btn btn-info text-white">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>


